<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".SearchAutoComplete.SearchAutoCompleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="8">

            <LinearLayout
                android:id="@+id/layoutback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:tint="@color/defaultGray"
                    android:padding="4dp"
                    android:src="@drawable/ic_back">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutedit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toEndOf="@+id/layoutback"
                android:orientation="vertical"
                android:layout_weight="6"
                android:layout_toRightOf="@+id/layoutback">

                <EditText
                    android:id="@+id/barikoiEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="center|fill"
                    android:hint="House 1, Road 1 ..."
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:transitionName="autocomplete" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/layoutedit"
                android:weightSum="1"
                android:layout_toRightOf="@+id/layoutedit">
                <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:tint="@color/defaultGray"
                    android:src="@drawable/ic_close">

                </ImageView>
                <ProgressBar
                    android:id="@+id/progressBarSearchPlace"
                    style="?android:attr/progressBarStyleInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:gravity="end"
        android:paddingRight="8dp"
        android:text="Powered By Barikoi"
        android:textColor="@color/colorBarikoi"
        android:textSize="12sp" />

<!--    <TextView-->
<!--        android:id="@+id/tvSuggestions"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:drawablePadding="5dp"-->
<!--        android:textColor="@color/colorTextGray"-->
<!--        android:textSize="14sp"-->
<!--        android:textStyle="normal"-->
<!--        android:layout_marginLeft="12dp"-->
<!--        android:layout_marginRight="12dp">-->

<!--    </TextView>-->
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="2dp"-->
<!--        android:layout_marginLeft="8dp"-->
<!--        android:layout_marginRight="8dp"-->
<!--        android:layout_marginTop="2dp"-->
<!--        android:background="@color/materialcolorgrey100" />-->

    <LinearLayout
        android:id="@+id/linearLayoutAdapter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/LinearLayoutListEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/noresult" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutNoNetContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp"
                app:srcCompat="@drawable/nonetwork" />


            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/could_not_connect"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <barikoi.barikoilocation.SearchAutoComplete.RecyclerViewEmptySupport
            android:id="@+id/searchedplacelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorTransparent"
            android:overScrollMode="never"
            android:padding="2dp"
            android:scrollbars="none"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listItem="@layout/nearby_place_item" />
    </LinearLayout>

</LinearLayout>

